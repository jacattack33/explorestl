@model explorestl.ViewModels.AddSightingViewModel
@{
    ViewData["Title"] = "Add an Activity";
}

@section styles{
    <link href="@Url.Content("~/css/AddActivity.css")" rel="stylesheet" type="text/css" />
}


<div class="card blink2" id="genericcard">
<form asp-controller="Home" asp-action="ProcessAddSightingForm" method="post">
    <h1 class="display-6">Add an activity to our datebase!</h1>
    </br>
    <div class="form-group">
        <label asp-for="Name" class="fw-bold">Activity Name</label>
            <input asp-for="Name" class="form-control" required/>
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
            <label asp-for="City" class="fw-bold">City</label>
        <input asp-for="City" class="form-control" required/>
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
            <label asp-for="State" class="fw-bold">State</label>
        <input asp-for="State" class="form-control" required/>
        <span asp-validation-for="State"></span>
    </div>

    <div class="form-group">
            <label asp-for="Description" class="fw-bold">Description</label>
            <label class="text-muted">  (What happened?...)</label>
        <textarea asp-for="Description" class="form-control" id="NewDescriptionText" required> </textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="fw-bold">Type or activity label</label>
            <label class="text-muted">  (e.g. Alien, Ghost, Bigfoot, Unknown...)</label>
        <input asp-for="Type" class="form-control" required/>
        <span asp-validation-for="Type"></span>
    </div>

        <img src="~/Images/ghost.png" alt="ghost" height="60px" width="60px">
        <img src="~/Images/ghost.png" alt="ghost" height="60px" width="60px">
        <img src="~/Images/ghost.png" alt="ghost" height="60px" width="60px">
        <img src="~/Images/ghost.png" alt="ghost" height="60px" width="60px">
        <img src="~/Images/ghost.png" alt="ghost" height="60px" width="60px">
        <img src="~/Images/ghost.png" alt="ghost" height="60px" width="60px">
    </br>
    <input type="submit" value="Add" />

</form>
</div>
